<div class="pull-right">
  <!-- <% if current_user %> -->
    <% if current_user.is_member_of?(@group) %>
      <label class="label label-success">群组成员</label>
      <%= link_to("退群", join_group_path(@group), method: :post, :class => "btn btn-danger") %>
    <% elsif !current_user.is_member_of?(@group)%>
      <label class="label label-warning">不是群组成员</label>
      <%= link_to("加入群组", join_group_path(@group),method: :post, :class => "btn btn-primary")%>
    <% end %>
  <!-- <% end %> -->
</div>
<div class="">
  <%= link_to("成员列表", people_group_path(@group), method: :post, :class => "btn btn-default") %>
  <%= link_to("发表文章", new_group_post_path(@group), class: "btn btn-default") %>
</div>
<div class="text-center" >
  <h2><%= @group.title %></h2>
  <%= @group.description %>
</div>
<hr>
<div class="">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>标题</th>
        <th>作者</th>
        <th>更新时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td>#</td>
        <td><%= post.title %></td>
        <!-- <td><%= post.user.email %></td> -->
        <td><%= post.updated_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
