<h1>我参加的群组</h1>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>标题</th>
      <th>描述</th>
      <th>所有者</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
    <tr>
      <td>#</td>
      <td><%= group.title %></td>
      <td><%= group.description %></td>
      <td><%= group.user.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>
